{
    "manifest_version": 3,
    "name": "LinkedIn Profile Picture Changer",
    "version": "1.0",
    "description": "Changes profile pictures on LinkedIn homepage posts to a specified image.",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.linkedin.com/*"
        ],
        "js": [
          "content.js"
        ],
        "css": [
          "style.css"
        ]
      }
    ],
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  